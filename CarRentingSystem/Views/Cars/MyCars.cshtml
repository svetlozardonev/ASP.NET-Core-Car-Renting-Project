@model IEnumerable<CarServiceModel>

@{
    ViewData["Title"] = "All Cars";
    ViewBag.AllowCarEdit = true;
}

@if (!Model.Any())
{
    <h2 class="text-danger">You do not have any cars yet!</h2>
}

<div class="row">

    @foreach (var car in Model)
    {
        <div class="col-md-3 mt-3">
            <div class="card">
                <img class="card-img-top" src="@car.ImageUrl" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@car.Brand - @car.Model</h5>
                    <p class="card-text">@car.Year</p>
                </div>
                <div class="card-body">
                    <a asp-controller="Cars" asp-action="Details" asp-route-id="@car.Id" class="btn btn-primary">View More</a>
                    @if (ViewBag.AllowCarEdit == true)
                    {
                        <a asp-controller="Cars" asp-action="Edit" asp-route-id="@car.Id" class="btn btn-warning">Edit</a>
                        <a asp-controller="Cars" asp-action="Delete" asp-route-id="@car.Id" class="btn btn-danger">Delete</a>
                    }
                </div>
            </div>
        </div>
    }
</div>